<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:text="Logo Template Manager"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Current Area Info -->
    <TextView
        android:id="@+id/textCurrentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="Region: Europe"
        android:textColor="#888888"
        android:textSize="12sp" />

    <!-- Templates List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTemplates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:clipToPadding="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/textEmptyTemplates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp"
        android:text="Keine Templates fÃ¼r diese Region"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:visibility="gone" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Import Button -->
        <TextView
            android:id="@+id/btnImportTemplate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_outline"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:text="Template importieren"
            android:textColor="#1976D2"
            android:textSize="14sp" />

        <!-- No Template Button -->
        <TextView
            android:id="@+id/btnNoTemplate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_outline"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:text="Kein Template verwenden"
            android:textColor="#666666"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
