<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stationContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:background="@drawable/station_tile_background"
    android:gravity="center"
    android:minWidth="100dp"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- RDS Station Name (if available) -->
    <TextView
        android:id="@+id/tvStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/radio_text_primary"
        android:textSize="11sp"
        android:visibility="gone" />

    <!-- Frequency -->
    <TextView
        android:id="@+id/tvFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="98.4"
        android:textColor="@color/radio_text_primary"
        android:textSize="14sp" />

    <!-- RSSI Signal Strength -->
    <TextView
        android:id="@+id/tvRssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/radio_text_secondary"
        android:textSize="10sp"
        android:visibility="gone" />

</LinearLayout>
