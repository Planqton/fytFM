<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/archiveOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header with back button, search and clear -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btnArchiveBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_chevron_left"
                android:scaleType="centerInside"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rds_archive"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

            <!-- Search toggle -->
            <ImageButton
                android:id="@+id/btnArchiveSearch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_search"
                android:padding="12dp"
                android:contentDescription="@string/search" />

            <!-- Clear all -->
            <ImageButton
                android:id="@+id/btnArchiveClear"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:padding="12dp"
                android:contentDescription="@string/clear" />

        </LinearLayout>

        <!-- Search bar (initially hidden) -->
        <LinearLayout
            android:id="@+id/archiveSearchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/etArchiveSearch"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="@string/search_radio_text"
                android:inputType="text"
                android:background="@drawable/search_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Filter chips (frequency filter) -->
        <HorizontalScrollView
            android:id="@+id/archiveFilterScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/archiveFilterChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/chipAllFrequencies"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:text="@string/all"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/chip_selected"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Dynamic frequency chips added programmatically -->

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Entry count -->
        <TextView
            android:id="@+id/tvArchiveStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:text="@string/entries_format"
            android:textColor="#666666"
            android:textSize="12sp" />

        <!-- RecyclerView for log entries -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/archiveRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/archiveEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_rds_data"
                android:textColor="#666666"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/turn_on_radio"
                android:textColor="#999999"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
