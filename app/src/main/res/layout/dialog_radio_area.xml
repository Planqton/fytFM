<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="20dp"
        android:text="Radio Area"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- USA, Korea -->
    <LinearLayout
        android:id="@+id/itemAreaUSA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="64dp"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="USA, Korea"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/checkUSA"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            android:tint="#5C6BC0" />

        <ImageView
            android:id="@+id/chevronUSA"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            android:alpha="0.5"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Latin America -->
    <LinearLayout
        android:id="@+id/itemAreaLatinAmerica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="64dp"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Latin America"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/checkLatinAmerica"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            android:tint="#5C6BC0" />

        <ImageView
            android:id="@+id/chevronLatinAmerica"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            android:alpha="0.5"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Europe -->
    <LinearLayout
        android:id="@+id/itemAreaEurope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="64dp"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Europe"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/checkEurope"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            android:tint="#5C6BC0" />

        <ImageView
            android:id="@+id/chevronEurope"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            android:alpha="0.5"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Russia -->
    <LinearLayout
        android:id="@+id/itemAreaRussia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="64dp"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Russia"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/checkRussia"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            android:tint="#5C6BC0" />

        <ImageView
            android:id="@+id/chevronRussia"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            android:alpha="0.5"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Japan -->
    <LinearLayout
        android:id="@+id/itemAreaJapan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="64dp"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Japan"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/checkJapan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            android:tint="#5C6BC0" />

        <ImageView
            android:id="@+id/chevronJapan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            android:alpha="0.5"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Bottom padding -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

</LinearLayout>
