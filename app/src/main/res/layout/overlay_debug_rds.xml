<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/debugOverlay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/debug_overlay_background"
    android:orientation="vertical"
    android:padding="12dp"
    android:minWidth="200dp"
    android:visibility="gone">

    <!-- Header -->
    <TextView
        android:id="@+id/debugHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RDS Debug"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- PS (Program Service) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="PS:"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/debugPs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- PI (Program Identification) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="PI:"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/debugPi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- PTY (Program Type) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="PTY:"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/debugPty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- RT (Radio Text) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="RT:"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/debugRt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--------------------------------"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- RSSI (Signal Strength) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="RSSI:"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/debugRssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- dBm"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- Frequency -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Freq:"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/debugFreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--.- MHz"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="monospace" />
    </LinearLayout>

</LinearLayout>
