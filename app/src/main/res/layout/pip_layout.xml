<?xml version="1.0" encoding="utf-8"?>
<!-- PiP Layout (Picture-in-Picture mode) -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pipLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/radio_background"
    android:visibility="gone">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Cover Art -->
    <ImageView
        android:id="@+id/pipCoverImage"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_cover_placeholder"
        android:layout_marginBottom="16dp" />

    <!-- Station/Title -->
    <TextView
        android:id="@+id/pipTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FM 90.40"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Artist (from Spotify/Local) -->
    <TextView
        android:id="@+id/pipArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#333333"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp" />

    <!-- Raw RDS RT -->
    <TextView
        android:id="@+id/pipRawRt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#888888"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace" />

    <!-- Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <ImageButton
            android:id="@+id/pipBtnPrev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous"
            android:contentDescription="Previous"
            android:tint="#333333" />

        <ImageButton
            android:id="@+id/pipBtnPlayPause"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/pip_play_background"
            android:src="@drawable/ic_pause"
            android:contentDescription="Play/Pause"
            android:tint="#333333"
            android:padding="18dp" />

        <ImageButton
            android:id="@+id/pipBtnNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next"
            android:contentDescription="Next"
            android:tint="#333333" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
