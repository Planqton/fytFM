<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:text="RT Korrekturen"
        android:textColor="#333333"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section: Edit Strings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit Regeln"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <ImageButton
                    android:id="@+id/btnAddEditString"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_add"
                    android:scaleType="centerInside"
                    android:padding="6dp"
                    android:contentDescription="Add edit string" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="12dp"
                android:text="Texte die vor der Suche ersetzt/entfernt werden"
                android:textColor="#888888"
                android:textSize="12sp" />

            <!-- Edit Strings list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerEditStrings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <TextView
                android:id="@+id/textEmptyEditStrings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="24dp"
                android:text="Keine Edit Regeln definiert"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:visibility="gone" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0" />

            <!-- Section: RT Corrections -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="8dp"
                android:text="Ignorierte RTs / Übersprungene Tracks"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingBottom="12dp"
                android:text="RTs die ignoriert oder deren Tracks übersprungen werden"
                android:textColor="#888888"
                android:textSize="12sp" />

            <!-- Corrections list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCorrections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Empty state for corrections -->
            <TextView
                android:id="@+id/textEmptyCorrections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="24dp"
                android:text="Keine RT Korrekturen vorhanden"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:visibility="gone" />

            <!-- Bottom spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Clear All button -->
    <TextView
        android:id="@+id/btnClearAllCorrections"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_outline"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="Alle löschen"
        android:textColor="#D32F2F"
        android:textSize="14sp" />

</LinearLayout>
