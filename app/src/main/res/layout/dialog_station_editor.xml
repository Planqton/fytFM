<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/textStationEditorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:text="Sender bearbeiten"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- PS Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:text="PS Name (RDS)"
        android:textColor="#666666"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/editStationPs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="z.B. OE3, FM4"
        android:inputType="textCapCharacters"
        android:maxLength="8"
        android:textSize="14sp" />

    <!-- PI Code -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:text="PI Code (hex)"
        android:textColor="#666666"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/editStationPi"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="z.B. A3E0"
        android:inputType="textCapCharacters"
        android:maxLength="4"
        android:textSize="14sp" />

    <!-- Frequencies -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:text="Frequenzen (MHz, kommagetrennt)"
        android:textColor="#666666"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/editStationFrequencies"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="z.B. 88.8, 90.4, 99.5"
        android:inputType="text"
        android:textSize="14sp" />

    <!-- Logo URL -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:text="Logo URL *"
        android:textColor="#666666"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="12dp">

        <EditText
            android:id="@+id/editStationLogoUrl"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:hint="https://..."
            android:inputType="textUri"
            android:textSize="13sp"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/btnSearchLogo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Logo suchen" />

    </LinearLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:text="Mindestens PS, PI oder Frequenz angeben."
        android:textColor="#888888"
        android:textSize="10sp" />

    <!-- Loading indicator for save -->
    <LinearLayout
        android:id="@+id/layoutSaveProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="12dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            style="?android:attr/progressBarStyleSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Logo wird heruntergeladen..."
            android:textColor="#666666"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:gravity="end">

        <TextView
            android:id="@+id/btnCancelStation"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="ABBRECHEN"
            android:textColor="#666666"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/btnSaveStation"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="SPEICHERN"
            android:textColor="#1976D2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

</LinearLayout>
