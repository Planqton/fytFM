<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="#FFFFFF">

    <!-- Top row: Time + Frequency + PS + Event Badge -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvEntryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:32:05"
            android:textColor="#666666"
            android:textSize="12sp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/tvEntryFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="FM 103.7"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEntryPs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="OE3"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Event badge (STATION_CHANGE) -->
        <TextView
            android:id="@+id/tvEntryEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="TUNE"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/chip_selected"
            android:visibility="gone" />

    </LinearLayout>

    <!-- RT (Radio Text) - main content -->
    <TextView
        android:id="@+id/tvEntryRt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Radio Text appears here..."
        android:textColor="#333333"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end" />

    <!-- Bottom row: RSSI + PI + PTY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvEntryRssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSSI: 42"
            android:textColor="#999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvEntryPi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="PI: 0xA503"
            android:textColor="#999999"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvEntryPty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="PTY: Pop"
            android:textColor="#999999"
            android:textSize="11sp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#E0E0E0" />

</LinearLayout>
