<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/radio_background"
    android:padding="16dp">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Frequency Row: Heart + Frequency -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pipBtnFavorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:contentDescription="@string/favorite"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_favorite_border" />

            <TextView
                android:id="@+id/pipTvFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="F"
                android:textColor="@color/radio_text_primary"
                android:textSize="64sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Frequency Scale -->
        <at.planqton.fytfm.FrequencyScaleView
            android:id="@+id/pipFrequencyScale"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pipBtnSkipPrev"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@null"
                android:contentDescription="@string/skip_previous"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_skip_previous" />

            <ImageButton
                android:id="@+id/pipBtnPlayPause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/pip_play_background"
                android:contentDescription="@string/play_pause"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pause" />

            <ImageButton
                android:id="@+id/pipBtnSkipNext"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@null"
                android:contentDescription="@string/skip_next"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_skip_next" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
